{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#env": ["./configs/vars.js"],
      "#routes/*": ["./src/routes/*"],
      "#views/*": ["./src/views/*"],
      "#lib/*": ["./src/lib/*"],
      "#classes/*": ["./src/lib/classes/*"],
    },
    "checkJs": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "es2015",
    "lib": ["es6"]
  },
  "exclude": [
    "dist",
    "node_modules",
    "build",
    ".vscode",
    "coverage",
    ".npm",
    ".yarn"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "node"
    ]
  }
}
