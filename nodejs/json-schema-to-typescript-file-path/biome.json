{
  "$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
  "files": {
    "ignore": ["**/dist"]
  },
  "organizeImports": {
    "enabled": true
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space"
    }
  },
  "linter": {
    "enabled": true,

    "rules": {
      "recommended": true,
      "suspicious": {
        "noEmptyInterface": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  }
}
